@import './popup/popup_inicioSesion';
@import './popup/popup_registro';
.Popup
	position:fixed;
	left:0;
	right:0;
	top:0;
	bottom:0;
	background:transparent;
	z-index:1;
	background:rgba(0,0,0,0.85);
	display:flex;
	justify-content:center;
	align-items:center;
//**************Dise√±o pagina principal*******
.Contenedor
	background:white;
	width:90%;
	max-width:900px;
	margin:0 auto;
	.Header
		width:100%;
		height:60px;
		background:#fff;
		padding:1em 3em;
		&-title
			margin:0;
			float:left;
		&-btn
			float:right;
			&-registrarse,
			&-login
				border:0;
				border-radius:8px;
				padding:.5em 1em;
				background:#107BD6;
				font-size:.8em;
				color:#fff;
				transition:background .5s;
			&-registrarse:hover,
			&-login:hover
				background:#014075;
			&-registrarse
				margin-right:.6em;
	.section-imagenes
		ul
			margin:0;
			width:100%;
			height:30em;
			figure
				width:100%;
				height:30em;
				background-size:cover;
				position:relative;
				figcaption
					background: rgba(black, 0.8);
					color:white;
					position:absolute;
					right:0;
					left:0;
					bottom:0;
					text-align:center;
					height:60px
					line-height: 60px;
					font-size:20px;
	.About
		display:flex;
		justify-content:space-around;
		padding:1em 0;
		&-Info
			width:10em;
			text-align:center;
			box-shadow:0px 0px 20px 0px rgba(black,.6)
			padding:6px 6px;
			h3
				border-bottom:1px solid black;
				display:inline-block;
				padding-bottom:.3em;
				margin:0;
			.IconoFace
				display:block;
				margin-top:15px;
				img
					width:50px;
					height:50px;