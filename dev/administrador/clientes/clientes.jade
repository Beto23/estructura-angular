
section.Contenedor-Clientes
	h2 Clientes
	div.Iconos-Clientes
		form(action="http://localhost/estructura-angular/backend/pdf/clientes.php" method="POST").Form-Clientes
			i.icon-search
			input(type="text" ng-model="search")
			button(type="submit").icon-file-pdf
			//i.icon-plus
	table(fixed-header).Tabla-Clientes
		thead
			tr
				th
					p Id
				th
					p Nombre
				th
					p Paterno
				th
					p Materno
		tbody
			tr(ng-repeat="cte in clientes | filter:search")
				td 
					p {{cte.id_cliente}}
				td 
					p {{cte.nombre}}
				td
					p {{cte.nom_paterno}}
				td.Td
					div
						p {{cte.nom_materno}}
