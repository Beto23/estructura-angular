div.Popup2(popup-close)
	section.Contenedor-Popup-Mecanico
		figure.Img-Mecanico
		form.Form-Mecanico
			h2 Agregar Mecanico
			div.Form-Mecanico-Contenedor
				label Nombre:
				input(title="Ingrese un nombre" type="text" ng-model="mecanico.nombre"  maxLength="25" required)
			div.Form-Mecanico-Contenedor
				label Paterno:
				input(title="Ingrese apellido paterno" type="text" ng-model="mecanico.nom_paterno" maxLength="25" required)
			div.Form-Mecanico-Contenedor
				label Materno:
				input(title="Ingrese apellido materno" type="text" ng-model="mecanico.nom_materno" maxLength="25" required)
			div.Form-Mecanico-Contenedor
				button(ng-click="addMecanico()") Agregar