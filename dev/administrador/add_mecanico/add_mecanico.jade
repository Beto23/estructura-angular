section.Contenedor-Mecanico
	h2(popup-add="<popup-error/>") Mecanicos
	div.Iconos-Mecanico
		form.Form-Mecanico
			i.icon-search
			input(type="text" ng-model="search")
			i.icon-printer
			i(popup-add="<popup-agregar-mecanico/>").icon-plus
	table(fixed-header).Tabla-Mecanico
		thead
			tr
				th
					p Id
				th
					p Nombre
				th
					p Paterno
				th
					p Materno
		tbody
			tr(ng-repeat="meca in mecanicos | filter:search")
				td 
					p {{meca.id_mecanico}}
				td 
					p {{meca.nombre}}
				td
					p {{meca.nom_paterno}}
				td.Td
					div
						p {{meca.nom_materno}}
						i.icon-bin(popup-add="<popup-confirmacion-delete-meca/>")
						i(popup-add="<popup-update-mecanico mecanico='meca'/>").icon-pencil
