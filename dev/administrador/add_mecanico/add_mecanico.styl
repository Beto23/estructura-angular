@import './popup_mecanico/popup_mecanico';
.Contenedor-Mecanico
	h2
		text-align:center;
	.Tabla-Mecanico, .Iconos-Mecanico
		width:30em;
	.Iconos-Mecanico
		background:#404040;
		margin:0 auto;
		color:white;
		text-align:right;
		padding:.37em;
		border-radius: 68px 23px;
		.Form-Mecanico
				input
					border-radius:15px;
					heigth:.5em;
					width:9em;
					padding-left:.5em;
				i
					transition:color .5s;
				i:hover
					color:#107BD6;
				i:first-child
					padding-right:0.2em;
					font-size:1em;
				i:last-child, .icon-printer
					cursor:pointer;
				.icon-printer
					font-size:1.3em;
					padding:0 0.5em;
	.Tabla-Mecanico
		tr
			.Td
				padding:0;
				div
					display:flex;
					text-align:center;
					p
						width:100%;
