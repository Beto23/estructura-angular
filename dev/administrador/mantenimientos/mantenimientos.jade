section.Contenedor-Mantenimientos
	h2 Mantenimientos
	div.Iconos-Mantenimientos
		form.Form-Mantenimientos
			i.icon-search
			input(type="text" ng-model="search")
			i.icon-printer
			i(popup-add="<popup-agregar-mantenimiento/>").icon-plus
	table(fixed-header).Tabla-Mantenimientos
		thead
			tr
				th
					p Id
				th
					p Descripcion
				th
					p costo
		tbody
			tr(ng-repeat="mtto in mantenimientos | filter:search")
				td 
					p {{mtto.id_mantenimiento}}
				td 
					p {{mtto.descripcion}}
				td.Td
					div
						p $ {{mtto.costo}}
						i.icon-bin(popup-add="<popup-confirmacion-delete-mante/>")
						i.icon-pencil(popup-add="<popup-update-mantenimiento mantenimiento='mtto'/>")
