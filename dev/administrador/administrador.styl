.Header-Perfil
	display:flex;
	justify-content: space-between;
	.opcions
		display:flex;
		&>*
			margin 0 1em
		.XML, .JASON
			display:flex;
			a
				display: flex;
				align-items: center;
				text-decoration: none;
				//background: white;
				border-radius: 26px;
				padding: .2em 1em;
		.JASON
			margin-left:.5em;
			img
				height 4em
		.XML
			img
				height 3em
		.Salir
			display: flex;
			align-items: flex-end;
			margin-bottom .3em;
			button
				background none;
				border 0;
				color white;
				.icon-switch
					color #FF4500;
					font-size 1.5em;
					margin-left .3em;
.Contenedor-Perfil
	.Info
		.About
			.Iconos-Portada
				p
					i
						transition:color .5s
						cursor:pointer;
					i:hover
						color:#107BD6;
		.Navegacion
			&-Contenedor
				& button:nth-child(4)
					position:relative;
					&:hover
						border:0 !important;
						font-weight: normal !important;
						background:white;
						.Navegacion-Contenedor-Desplegar
							height:5.7em;
							background:#404040;
					li
						padding:.3em;
						color:white;
					li:hover
						background:rgba(255,255,255,0.50);
						color:black;
				&-Desplegar
					//background:rgba(255,255,255,1);
					list-style: none;
					position:absolute;
					left:0;
					right:0;
					top:100%;
					width:100%;
					height: 0;
					margin:0;
					padding:0;
					overflow:hidden;
					transition: height .1s linear;
					& > li
						button
							display:block;
